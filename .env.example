# App
NODE_ENV=development
APP_BASE_URL=https://example.com
APP_LOCALE=tr
APP_TIMEZONE=Europe/Istanbul

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ruya?schema=public
PG_BOSS_SCHEMA=pgboss
PG_BOSS_APP_NAME=ruyatabiri-worker

# Replicate
REPLICATE_API_TOKEN=your-replicate-token

# GPT-5 variants
GPT5_MODEL=openai/gpt-5-structured
GPT5_VARIANT=gpt-5-mini

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret
R2_BUCKET=ruya-images
R2_PUBLIC_BASE_URL=https://cdn.example.com/ruya
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
INTERNAL_WEBHOOK_SECRET=whsec_xxx

# Limits
DAILY_PUBLICATION_LIMIT=5
